{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<div class="container blog padding-bottom-medium">
    <div class="col-xs-12">
    {{#post}}
        <div class="row blog-post">
            <div class="col-md-12">
                <h4>{{{title}}}</h4>
            </div>
            <div class="col-md-12">
                <div class="tags tags-blog">
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <p><span class="color-font"><i class="fa fa-clock-o"></i></span> {{date published_at format="DD MMM, YYYY"}}</p>
                        </div>
                        <div class="col-sm-9">
                            <p>
                            {{#if tags}}
                                <span class="color-font"><i class="fa fa-tag"></i></span>
                                {{#tags separator=", "}}
                                    {{name}}
                                {{/tags}}
                            {{/if}}
                            </p>
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
            <div class="col-md-12 animated" data-fx="fadeInUp">
                {{content}}
            </div>
            <div class="col-md-3">
                <h5>Share this story</h5>
            </div>
            <div class="col-md-9">
                <div class="social">
                    <ul>
                        <li>
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}{{url}}"
                               onclick="window.open(this.href, 'facebook-share','width=580,height=296'); return false;"
                               rel="nofollow"
                               title="Facebook">
                                <div class="circle-btn" data-toggle="tooltip" data-placement="bottom" title="Facebook">
                                    <p><i class="fa fa-facebook"></i><span class="sr-only">Facebook</span></p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="http://twitter.com/share?text={{{title}}}&url={{@blog.url}}{{url}}"
                               onclick="window.open(this.href, 'twitter-share', 'width=550,height=235'); return false;"
                               rel="nofollow"
                               title=" Share on Twitter">
                                <div class="circle-btn" data-toggle="tooltip" data-placement="bottom" title="Twitter">
                                    <p><i class="fa fa-twitter"></i><span class="sr-only">Twitter</span></p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <div class="circle-btn" data-toggle="tooltip" data-placement="bottom" title="LinkedIn">
                                    <p><i class="fa fa-linkedin-square"></i><span class="sr-only">LinkedIn</span></p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="https://plus.google.com/share?url={{@blog.url}}{{url}}"
                               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530'); return false;"
                               rel="nofollow"
                               title="Google+">
                                <div class="circle-btn" data-toggle="tooltip" data-placement="bottom" title="Google+">
                                    <p><i class="fa fa-google-plus" alt="Google+"></i><span class="sr-only">Google Plus</span></p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <div class="circle-btn" data-toggle="tooltip" data-placement="bottom" title="Pinterest">
                                    <p><i class="fa fa-pinterest"></i> <span class="sr-only">Pinterest</span></p>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        {{! TO DISABLE DELETE FROM HERE ... }}
